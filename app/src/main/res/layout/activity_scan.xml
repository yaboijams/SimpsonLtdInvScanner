<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Location Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/locationCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Location"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <!-- Actual Location Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/actualLocationCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationCardView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/actualLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Actual Location"
                android:textSize="16sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <!-- Room Description Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/roomDescriptionCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actualLocationCardView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/roomDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Room Description"
                android:textSize="16sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <!-- Error Message Section -->
        <TextView
            android:id="@+id/errorMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomDescriptionCardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:visibility="gone"/>

        <!-- Scanned Item Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/scanDataCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/errorMessageTextView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/scanDataTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Scan Data Will Appear Here"
                android:textSize="24sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <!-- Title Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/titleCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scanDataCardView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Title"
                android:textSize="16sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <!-- Action Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/actionCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleCardView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/actionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Action"
                android:textSize="16sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <!-- Caliber Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/caliberCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actionCardView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/caliberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Caliber"
                android:textSize="16sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <!-- License Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/serialnumCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caliberCardView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/serialnumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Serial Number"
                android:textSize="16sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/licenseCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/serialnumCardView"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lightBlue"
            android:elevation="4dp">

            <TextView
                android:id="@+id/licenseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="License"
                android:textSize="16sp"
                android:textColor="@color/gold"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
